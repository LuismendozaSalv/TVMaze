<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TVMaze" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/silver</item>
        <item name="colorOnPrimary">@color/big_stone</item>
        <item name="colorOnPrimarySurface">@color/big_stone</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crimson</item>
        <item name="colorSecondaryVariant">@color/bright_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextSemibold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfprotext_semibold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfprotext_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingBarYellow" parent="Theme.AppCompat">
        <item name="android:progressBackgroundTint">@color/silver</item>
        <item name="android:progressTint">@color/saffron</item>
        <item name="ratingBarStyle">@android:style/Widget.Holo.RatingBar.Indicator</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>

</resources>